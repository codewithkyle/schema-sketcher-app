{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["dom", "esnext"],
		"moduleResolution": "Node",
		"baseUrl": "./src",
		"paths": {
			"~controllers/*": ["controllers/*"],
			"~lib/*": ["lib/*"],
			"~types/*": ["types/*"],
			"~utils/*": ["utils/*"],
            "~components/*": ["components/*"]
		}
	},
	"include": ["src"]
}