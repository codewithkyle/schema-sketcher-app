{
    "scripts": {
        "install:brixi": "brixi && mv ./brixi ./src/styles/brixi",
        "bundle": "node ./build/bundle.js",
        "production": "npm run bundle && npm run build && asset-manager",
        "build": "run-s build:*",
        "build:css": "cssmonster",
        "build:js": "twist --type=esbuild --src=./src",
        "watch": "run-p watch:*",
        "watch:src": "npm-watch",
        "watch:server": "serve ./public",
        "deploy": "node ./build/deploy.js"
    },
    "devDependencies": {
        "@codewithkyle/asset-manager": "^1.1.0",
        "@codewithkyle/notifyjs": "^4.1.0",
        "@codewithkyle/pubsub": "^1.1.1",
        "@codewithkyle/router": "^2.1.3",
        "@codewithkyle/supercomponent": "^2.0.0",
        "@codewithkyle/twist": "^2.1.0",
        "@codewithkyle/uuid": "^1.0.1",
        "brixi": "^0.8.0",
        "cssmonster": "^0.7.3",
        "dayjs": "^1.11.11",
        "esbuild": "^0.23.0",
        "esinstall": "^1.1.7",
        "gh-pages": "^6.1.1",
        "glob": "^11.0.0",
        "lit-html": "^2.8.0",
        "lz-string": "^1.5.0",
        "npm-run-all": "^4.1.5",
        "npm-watch": "^0.13.0",
        "sass": "^1.77.8",
        "serve": "^14.2.3",
        "sortablejs": "^1.15.2",
        "tooltipper": "^1.1.6"
    },
    "bundle": [
        "@codewithkyle/pubsub",
        "@codewithkyle/router",
        "@codewithkyle/supercomponent",
        "@codewithkyle/uuid",
        "lit-html",
        "lit-html/directives/unsafe-html.js",
        "dayjs",
        "tooltipper",
        "sortablejs",
        "@codewithkyle/notifyjs/notifications.js",
        "@codewithkyle/notifyjs/toaster.js",
        "@codewithkyle/notifyjs/snackbar.js",
        "lz-string"
    ],
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "ts,js,scss,css,tsx,jsx,mjs,cjs",
            "quiet": false
        }
    }
}
