{
  "scripts": {
    "bundle": "node ./build/bundle.js",
    "brixi": "brixi && mv ./brixi/brixi.css ./src/styles/brixi.css && rmdir ./brixi",
    "build": "run-p build:*",
    "build:js": "twist --src=./src --outDir=./public/js",
    "build:css": "cssmonster",
    "production": "npm run bundle && npm run build && asset-manager",
    "watch": "run-p watch:*",
    "watch:src": "npm-watch",
    "watch:server": "node ./server/index.js"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.10.0",
    "socket.io": "^4.4.0",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@codewithkyle/asset-manager": "^1.0.2",
    "@codewithkyle/jsql": "^1.1.0",
    "@codewithkyle/pubsub": "^1.1.1",
    "@codewithkyle/router": "^1.1.0",
    "@codewithkyle/supercomponent": "^1.3.0",
    "@codewithkyle/twist": "^1.5.0",
    "brixi": "^0.5.2",
    "cssmonster": "^0.4.0",
    "dayjs": "^1.10.7",
    "esinstall": "^1.1.7",
    "glob": "^7.2.0",
    "lit-html": "^1.4.1",
    "tooltipper": "^1.0.1",
    "uuid": "^8.3.2"
  },
  "bundle": [
    "@codewithkyle/jsql",
    "@codewithkyle/pubsub",
    "@codewithkyle/router",
    "@codewithkyle/supercomponent",
    "lit-html",
    "lit-html/directives/unsafe-html",
    "uuid",
    "dayjs",
    "tooltipper"
  ],
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,js,scss,css,tsx,jsx,mjs,cjs",
      "quiet": false
    }
  }
}
